@model TodoListApp.WebApi.Models.Dtos.AppUserDtos.UserCreateDto
@{
    ViewData["Title"] = "Sign Up";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5 col-sm-10">
        <div class="card shadow-sm border-0 p-4 bg-light">
            <h3 class="text-center mb-4 text-primary">
                <i class="fas fa-user-plus me-2"></i>Sign Up
            </h3>

            <form asp-action="SignUp" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="form-group mb-3">
                    <i class="fas fa-user text-secondary me-1"></i> Username
                    <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <i class="fas fa-envelope text-secondary me-1"></i> Email
                    <input asp-for="Email" class="form-control" placeholder="Enter email" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <i class="fas fa-phone text-secondary me-1"></i> Phone Number
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <i class="fas fa-lock text-secondary me-1"></i> Password
                    <input asp-for="Password" class="form-control" placeholder="Enter password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-grid mb-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-user-plus me-1"></i> Sign Up
                    </button>
                </div>

                <div class="text-center">
                    <a asp-action="SignIn" class="btn btn-link text-muted small">
                        <i class="fas fa-arrow-right-to-bracket me-1"></i> Back to Sign In
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
