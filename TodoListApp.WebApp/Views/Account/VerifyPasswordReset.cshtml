@model TodoListApp.WebApi.Models.Dtos.AuthDtos.VerifyResetRequest
@{
    ViewData["Title"] = "Reset Password";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5 col-sm-10">
        <div class="card shadow-sm border-0 p-4 bg-light">
            <h3 class="text-center mb-4 text-primary">
                <i class="fas fa-key me-2"></i>Reset Password
            </h3>

            <form asp-action="VerifyPasswordReset" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <input asp-for="Email" type="hidden" />

                <div class="form-group mb-3">
                    <i class="fas fa-shield-alt text-secondary me-1"></i> Verification Code
                    <input asp-for="Code" class="form-control" placeholder="Enter the verification code" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <i class="fas fa-lock text-secondary me-1"></i> New Password
                    <input asp-for="NewPassword" class="form-control" type="password" placeholder="Enter new password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="d-grid mb-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check me-1"></i> Reset Password
                    </button>
                </div>

                <div class="text-center">
                    <a asp-action="SignIn" class="btn btn-link text-muted small">
                        <i class="fas fa-arrow-right-to-bracket me-1"></i> Back to Sign In
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
