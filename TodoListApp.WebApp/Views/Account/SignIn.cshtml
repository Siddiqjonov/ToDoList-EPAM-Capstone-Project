@model TodoListApp.WebApi.Models.Dtos.AuthDtos.UserLogInDto
@{
    ViewData["Title"] = "Sign In";
}

<!-- Sign In UI -->
<div class="row justify-content-center mt-5">
    <div class="col-md-5 col-sm-10">
        <div class="card shadow-sm border-0 p-4 bg-light">
            <h3 class="text-center mb-4 text-primary">
                <i class="fas fa-right-to-bracket me-2"></i>Sign In
            </h3>
            <form asp-action="SignIn" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="form-group mb-3">
                    <i class="fas fa-user text-secondary me-1"></i> Username
                    <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <i class="fas fa-lock text-secondary me-1"></i> Password
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-grid mb-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-arrow-right-to-bracket me-1"></i> Sign In
                    </button>
                </div>

                <div class="text-center">
                    <a asp-action="ForgotPassword" class="btn btn-link text-muted small">
                        <i class="fas fa-question-circle me-1"></i> Forgot Password?
                    </a>
                    <br />
                    <a asp-action="SignUp" class="btn btn-link text-muted small">
                        <i class="fas fa-user-plus me-1"></i> Create Account
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
