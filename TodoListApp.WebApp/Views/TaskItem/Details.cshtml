@model TodoListApp.WebApi.Models.Dtos.TaskItemDtos.TaskItemGetDto
@{
    ViewData["Title"] = "Task Details";
    var toDoListId = ViewBag.TodoListId;
}

<div class="row">
    <div class="col-md-8">
        <h2>Task Details</h2>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@Model.Title</dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Description</dd>
            <dt class="col-sm-2">Due Date</dt>
            <dd class="col-sm-10">@(Model.DueDate?.ToString("g"))</dd>
            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">
                @(Model.IsCompleted ? "Completed" : "Pending")
                @if (Model.IsOverdue)
                {
                    <span class="badge bg-danger">Overdue</span>
                }
            </dd>
        </dl>
        <div>
            <a asp-action="Edit" asp-route-taskId="@Model.TaskItemId" asp-route-toDoListId="@toDoListId" class="btn btn-warning">Edit</a>
            <a asp-controller="Comment" asp-action="Index" asp-route-taskId="@Model.TaskItemId" asp-route-toDoListId="@toDoListId" class="btn btn-secondary">View Comments</a>
            <a asp-action="Index" asp-route-toDoListId="@toDoListId" class="btn btn-secondary">Back to Tasks</a>
        </div>
    </div>
</div>